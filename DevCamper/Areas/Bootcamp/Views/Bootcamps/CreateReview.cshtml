@model DevCamper.Models.ViewModels.CreateEditReviewViewModel

@{
    ViewData["Title"] = "Create Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-5">
    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="card bg-white py-2 px-4">
                <div class="card-body">
                    <a asp-action="Details" asp-controller="Bootcamps" asp-area="Bootcamp" asp-route-Slug="@Model.Slug" class="btn btn-link text-secondary my-3"><i class="fas fa-chevron-left"></i> Bootcamp Info</a>
                    <h1 class="mb-2">@Model.BootcampTitle</h1>
                    <h3 class="text-primary mb-4">Write a Review</h3>
                    <p>
                        You must have attended and graduated this bootcamp to review
                    </p>
                    <form method="post" asp-action="InsertReview" asp-route-Slug="@Model.Slug">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Review.Rating">Rating: <span class="text-primary" id="spanRating">@Model.Review.Rating</span></label>
                            <input type="range"
                                   class="custom-range"
                                   min="1"
                                   max="10"
                                   step="1"
                                   id="ratingSlider"
                                   oninput="spanRating.textContent = ratingSlider.value"
                                   asp-for="@Model.Review.Rating" />
                            <span asp-validation-for="@Model.Review.Rating"></span>
                        </div>
                        <div class="form-group">
                            <input type="text"
                                   class="form-control"
                                   placeholder="Review title"
                                   asp-for="@Model.Review.Title"
                                   required />
                            <span asp-validation-for="@Model.Review.Title"></span>
                        </div>
                        <div class="form-group">
                            <textarea rows="10"
                                      class="form-control"
                                      placeholder="Your review"
                                      asp-for="@Model.Review.Text"></textarea>
                            <span asp-validation-for="@Model.Review.Text"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit"
                                   value="Submit Review"
                                   class="btn btn-dark btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

