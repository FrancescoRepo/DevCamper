@model Review

@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<section class="container mt-5">
    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="card bg-white py-2 px-4">
                <div class="card-body">
                    <a asp-action="Index" asp-controller="Reviews" asp-area="Reviews" class="btn btn-link text-secondary my-3"><i class="fas fa-chevron-left"></i> Back to Reviews</a>
                    <h1 class="mb-2">@Model.Bootcamp.Name</h1>
                    <h3 class="text-primary mb-4">Edit Review</h3>
                    <p>
                        You must have attended and graduated this bootcamp to review
                    </p>
                    <form method="post" asp-action="Update" asp-route-Id="@Model.Id">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Rating">Rating: <span class="text-primary" id="spanRating">@Model.Rating</span></label>
                            <input type="range"
                                   class="custom-range"
                                   min="1"
                                   max="10"
                                   step="1"
                                   id="ratingSlider"
                                   oninput="spanRating.textContent = ratingSlider.value"
                                   asp-for="@Model.Rating" />
                            <span asp-validation-for="@Model.Rating"></span>
                        </div>
                        <div class="form-group">
                            <input type="text"
                                   class="form-control"
                                   placeholder="Review title"
                                   asp-for="@Model.Title"
                                   required />
                            <span asp-validation-for="@Model.Title"></span>
                        </div>
                        <div class="form-group">
                            <textarea rows="10"
                                      class="form-control"
                                      placeholder="Your review"
                                      asp-for="@Model.Text"></textarea>
                            <span asp-validation-for="@Model.Text"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit"
                                   value="Update Review"
                                   class="btn btn-dark btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

