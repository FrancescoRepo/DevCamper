@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<br /><br />
<section class="container mt-5">
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="card bg-white py-2 px-4">
                <div class="card-body">
                    <h1 class="mb-2">Manage Account</h1>
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Name"
                                   asp-for="Input.Name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Surname"></label>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Name"
                                   asp-for="Input.Surname" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input type="email"
                                   class="form-control"
                                   placeholder="Email"
                                   asp-for="Input.Email" />
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit"
                                           value="Save"
                                           class="btn btn-success btn-block" />
                                </div>
                                <div class="col-md-6">
                                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword"
                                       class="btn btn-secondary btn-block">Update Password</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}